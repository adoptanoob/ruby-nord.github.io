doctype html

html lang="#{data.settings.site.i18n}"
  head
    meta charset="utf-8"
    meta name="viewport" content="width=device-width,initial-scale=1"

    title #{current_page.data.title} â–¾ #{data.settings.site.title}
    meta name="description" content="#{current_page.data.description}"

    = partial 'views/global/favicon'
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Amatic+SC:700|Andika'

  body class='#{page_classes}'
    = partial 'views/global/header'
    == yield
    = partial 'views/global/footer'

    = javascript_include_tag 'application'
    = yield_content :javascripts
